{
  "name": "achievements",
  "version": "0.1.0",
  "description": "Framework-agnostic achievement tracking library",
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "rolldown -c && tsc -p tsconfig.build.json",
    "dev": "rolldown -c --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "rolldown": "catalog:",
    "typescript": "catalog:",
    "vitest": "4.0.18"
  }
}
